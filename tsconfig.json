{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    // My current site works on Node20 because some package is holding us back, may move to Node2022 once cleared up - Anthony 2025-03-20 ],
    "@tsconfig/node20/tsconfig"
  ],
  "compilerOptions": {
    // From https://www.typescriptlang.org/docs/handbook/modules/guides/choosing-compiler-options.html#im-writing-a-library but removing those already in:
    // * https://www.npmjs.com/package/@tsconfig/node20
    // * https://www.npmjs.com/package/@tsconfig/strictest
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    // TODO: See if we can get this back, seems like a good setting
    // * https://www.typescriptlang.org/tsconfig/#verbatimModuleSyntax
    "verbatimModuleSyntax": false, // Disabled for Jest (ts-jest) tests to have import syntax work

    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
